<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@drawable/backgrount</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:textSize">18sp</item>
    </style>
    <declare-styleable name="CustomButton">
        <attr name="drawable_width" format="dimension"/>
        <attr name="drawable_height" format="dimension"/>
    </declare-styleable>
    <style name="backButton">
        <item name="android:layout_width">40px</item>
        <item name="android:layout_height">42px</item>
        <item name="android:layout_marginTop">42px</item>
        <item name="android:layout_marginLeft">72px</item>
        <item name="android:src">@drawable/back</item>
    </style>

</resources>
