<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_rent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.wuxian.charge.rent.RentActivity">

    <RelativeLayout
        android:id="@+id/user"
        android:layout_width="495px"
        android:layout_height="218px"
        android:layout_centerVertical="true"
        android:background="@drawable/shape_user_bg">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/user_image"
            android:layout_width="135px"
            android:layout_height="135px"
            android:layout_alignParentRight="true"
            android:layout_marginRight="109px"
            android:layout_marginTop="20px" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@id/user_image"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="20px"
            android:ellipsize="end"
            android:maxLines="1"
            android:textSize="32sp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="235px"
        android:layout_height="218px"
        android:layout_alignTop="@id/user"
        android:layout_marginLeft="54px"
        android:layout_toRightOf="@id/user"
        android:gravity="center"
        android:orientation="vertical">

        <Button
            android:layout_width="235px"
            android:layout_height="50px"
            android:background="@drawable/shape_button"
            android:paddingLeft="32dp"
            android:paddingRight="32dp"
            android:text="确认租借"
            android:textColor="@color/white"
            android:textSize="34sp"
            app:backgroundTint="@color/button_green" />

        <Button
            android:layout_width="235px"
            android:layout_height="50px"
            android:layout_marginTop="60px"
            android:background="@drawable/shape_edite_text"
            android:paddingLeft="32dp"
            android:paddingRight="32dp"
            android:text="取消退出"
            android:textColor="@color/white"
            android:textSize="34sp" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="74px"
        android:layout_marginTop="42px"
        android:drawableLeft="@drawable/countdown"
        android:drawablePadding="16px"
        android:text="60s"
        android:textColor="@color/white"
        android:textSize="30sp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="90px"
        android:drawableLeft="@drawable/attention"
        android:drawablePadding="16px"
        android:text="一些提示信息，可以要"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:gravity="center"/>
    <ImageView style="@style/backButton" />
</RelativeLayout>
